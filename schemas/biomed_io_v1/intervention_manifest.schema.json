{
  "$id": "semiocore.biomed.intervention_manifest.v1",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "schema": {"const": "semiocore.biomed.intervention_manifest.v1"},
    "subject_id": {"type": "string"},
    "perturbation": {
      "anyOf": [
        {"type": "null"},
        {"$ref": "#/$defs/perturbation"}
      ]
    },
    "baseline": {"$ref": "#/$defs/timepoint"},
    "posts": {
      "type": "array",
      "minItems": 1,
      "items": {"$ref": "#/$defs/timepoint"}
    },
    "notes": {"type": "string"}
  },
  "required": ["schema", "baseline", "posts"],
  "$defs": {
    "timepoint": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "label": {"type": "string"},
        "offset_hours": {"type": "number"},
        "labs_ref": {"type": "string"},
        "wearable_ref": {"type": "string"},
        "external_scores": {
          "type": "object",
          "additionalProperties": {"type": "string"}
        }
      },
      "required": ["label"]
    },
    "perturbation": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "kind": {"type": "string"},
        "description": {"type": "string"},
        "start_utc": {"type": "string"},
        "end_utc": {"type": "string"}
      },
      "required": ["kind"]
    }
  }
}
